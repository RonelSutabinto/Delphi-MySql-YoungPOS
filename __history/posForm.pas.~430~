procedure TposFrm.MOP_RadioClick(Sender: TObject);
begin
  case MOP_Radio.ItemIndex of
    0:begin
      PD_Radio.Enabled := false;
      Bank.Text := '';
      CheckNumber.Text := '';
    end;
    1: PD_Radio.Enabled := true;
  end;
end;

