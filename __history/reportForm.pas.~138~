procedure TReports.NxLinkLabel4Click(Sender: TObject);
begin


  joDetailsQ.Close;
  joDetailsQ.ParamByName('idjo').Text := joQidjo.Text;
  joDetailsQ.Open;


  joColl.Close;
  joColl.ParamByName('idjo').Text := joQidjo.Text;
  joColl.Open;

